@model ClienteModel
@{
    ViewData["Title"] = "Criar Clientes";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar  Cliente</h1>

</div>

<form asp-controller="Clientes" asp-action="Salvar" method="post">
    <div class="form-group"  style="margin-top: 15px">
        <label for="Cliente"><b>Cliente</b></label>
        <input type="text" id="nmCliente" name="nmCliente" class="form-control" placeholder="Digite o Nome do Cliente">
    </div>
    <div class="form-group" style="margin-top: 15px">
        <label for="Cidade"><b>Cidade</b></label>
        <input type="text" id="nmCidade" name="nmCidade" class="form-control" placeholder="Digite o Nome da Cidade">
    </div>

    <div class="d-grip gap-2 d-md-flex" style="margin-top: 15px">
        <button type="submit" class="btn btn-success" role="button" style="width: 100%">Adicionar</button>
        <a asp-controller="Clientes" asp-action="Index" class="btn btn-danger" asp-for="nmCidade" style="width: 100%" role="button">Cancelar</a>
    </div>
</form>