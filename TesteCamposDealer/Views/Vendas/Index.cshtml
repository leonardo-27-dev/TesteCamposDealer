@{
    ViewData["Title"] = "Listagem das Vendas";
}
<div class="text-center">

    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" rel="Stylesheet" type="text/css" />

    <h1 class="display-4">Listagem das Vendas</h1>
    <table class="table table-striped table-dark">
        <thead class="thead-dark">
            <tr>
                <th>Id da Venda</th>
                <th>Id do Cliente</th>
                <th>Id do Produto</th>
                <th>Quantidade da Venda</th>
                <th>Valor Unitario Venda</th>
                <th>Data da Venda</th>
                <th>Valor Total da Venda</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in ViewBag.Lista)
        {
            <tr>
                <td style="padding: 0px;white-space: nowrap; ">@item.idVenda</td>
                <td style="padding: 0px;white-space: nowrap; ">@item.idCliente</td>
                <td style="padding: 0px;white-space: nowrap; ">@item.idProduto</td>
                <td style="padding: 0px;white-space: nowrap; ">@item.qtdVenda</td>
                <td style="padding: 0px;white-space: nowrap; ">@item.vlrUnitarioVenda</td>
                <td style="padding: 0px;white-space: nowrap; ">@item.dthVenda</td>
                <td style="padding: 0px;white-space: nowrap; ">@item.vlrTotalVenda</td>
                <td style="padding: 0px;white-space: nowrap; ">
                    <div class="group" role="group">
                        <a href="Vendas/Editar/@item.idVenda" role="button" type="button" class="btn btn-warning">Editar</a>
                        <a href="Vendas/DeletarConfirmacao/@item.idVenda" role="button" type="button" class="btn btn-danger">Deletar</a>
                    </div>
                </td>
            </tr>
        }
    </table>
    <div class="d-grip gap-2 d-md-flex" style="justify-content: center;">
        <a asp-controller="Vendas" asp-action="Criar" role="button" type="button" class="btn btn-success">Adicionar Nova Venda</a>
    </div>
</div>