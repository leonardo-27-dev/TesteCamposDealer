@{
    var Produtos = ViewBag.produtos;
}

@{
    ViewData["Title"] = "Editar Produtos";
}

<div class="text-center">

    <h1 class="display-4">Editar Produtos</h1>

</div>

<form asp-controller="Produtos" asp-action="Salvar" method="post">
    <div hidden class="form-group" style="margin-top: 15px">
        <label hidden for="Produtos"><b>Id Produto</b></label>
        <input hidden type="text" id="idProduto" name="idProduto" class="form-control" value="@Produtos.idProduto">
    </div>
    <div class="form-group" style="margin-top: 15px">
        <label for="Produtos"><b>Nome do Produto</b></label>
        <input type="text" id="dscProduto" name="dscProduto" class="form-control" placeholder="Digite o Nome do Produto" value="@Produtos.dscProduto">
    </div>
    <div class="form-group" style="margin-top: 15px">
        <label for="ValorUnitario"><b>Vaor Unit. do Produto</b></label>
        <input type="text" id="vlrUnitario" name="vlrUnitario" class="form-control" placeholder="Digite o Valor do Produto" value="@Produtos.vlrUnitario">
    </div>

    <div class="d-grip gap-2 d-md-flex" style="margin-top: 15px">
        <button type="submit" class="btn btn-success" role="button" style="width: 100%">Salvar</button>
        <a class="btn btn-danger" role="button" asp-controller="Produtos" asp-action="Index" style="width: 100%">Cancelar</a>
    </div>
</form>